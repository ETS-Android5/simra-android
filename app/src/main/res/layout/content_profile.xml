            android:textSize="15sp" />

        <Spinner
            android:id="@+id/ageGroupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/ageGroupList"
            android:prompt="@string/pleaseChoose" />

