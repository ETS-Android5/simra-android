<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".activities.SingleRideStatisticsActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/distanceOfRide"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/routeDistanceSymbol"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/route"
            android:backgroundTint="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/distanceOfRideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textSize="13sp"
            android:layout_toEndOf="@id/routeDistanceSymbol"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/durationOfRide"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/durationClockSymbol"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/ic_timer_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/durationOfRideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/durationClockSymbol"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/durationOfIdle"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/idleDurationSymbol"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/ic_traffic_light_red"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/durationOfIdleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idle"
            android:textSize="13sp"
            android:layout_toEndOf="@id/idleDurationSymbol"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/co2Savings"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/co2SavingsSymbol"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/ic_co2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/co2SavingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/co2Savings"
            android:textSize="13sp"
            android:layout_toEndOf="@id/co2SavingsSymbol"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/averageSpeed"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/tachometerSymbol"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/ic_tachometer"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/averageSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_Speed"
            android:textSize="13sp"
            android:layout_toEndOf="@id/tachometerSymbol"
            android:layout_centerVertical="true"/>
    </RelativeLayout>





</LinearLayout>
