<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_licenses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LicenseActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fadingEdgeLength="80dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/android_support_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Android Support Library" />

            <Button
                android:id="@+id/apache_commons_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Apache Commons" />

            <Button
                android:id="@+id/fbase_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="FBase" />

            <Button
                android:id="@+id/gson_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Gson" />

            <Button
                android:id="@+id/javax_activation_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Javax Activation" />

            <Button
                android:id="@+id/jersey_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Jersey" />

            <Button
                android:id="@+id/jetty_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Jetty" />

            <Button
                android:id="@+id/logback_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Logback" />

            <Button
                android:id="@+id/mpandroidchart_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="MPAndroidChart" />

            <Button
                android:id="@+id/okhttp_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="OkHttp" />

            <Button
                android:id="@+id/osmbonuspack_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Osmbonuspack" />

            <Button
                android:id="@+id/osmdroid_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Osmdroid" />

            <Button
                android:id="@+id/rangeseekbar_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="RangeSeekBar" />

            <Button
                android:id="@+id/slf4j_api_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SLF4J API" />

            <Button
                android:id="@+id/slf4j_simple_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SLF4J Simple" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>